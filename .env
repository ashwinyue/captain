# Captain Environment Configuration
# Copy this file to .env and modify as needed

# ============================================
# Database
# ============================================
DATABASE_URL=postgres://captain:captain123@localhost:5432/captain?sslmode=disable
POSTGRES_DB=captain
POSTGRES_USER=captain
POSTGRES_PASSWORD=captain123

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# JWT / Security
# ============================================
JWT_SECRET=captain-jwt-secret-change-in-production-min-32-chars
SECRET_KEY=captain-secret-key-change-in-production

# ============================================
# WuKongIM
# ============================================
WUKONGIM_URL=http://localhost:5001
WUKONGIM_EXTERNAL_IP=127.0.0.1

# ============================================
# Service URLs (for inter-service communication)
# ============================================
AICENTER_URL=http://localhost:8081
RAG_SERVICE_URL=http://localhost:8082
PLATFORM_SERVICE_URL=http://localhost:8083

# ============================================
# AI Provider (OpenAI compatible)
# ============================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# ============================================
# Storage
# ============================================
STORAGE_PATH=./uploads

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
GIN_MODE=debug

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
